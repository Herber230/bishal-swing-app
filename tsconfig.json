{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/auth": ["./src/context/auth"],
      "@/components/*": ["./src/implementation/components/*"],
      "@/entities/*": ["./src/business/entities/*"],
      "@/impl-mongodb/*": ["./src/implementation/mongodb/*"],
      "@/repositories/*": ["./src/business/repositories/*"],
      "@/server-context/*": ["./src/context/server/*"],
      "@/use-cases/*": ["./src/business/use-cases/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
